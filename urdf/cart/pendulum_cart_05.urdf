<?xml version="1.0"?>
<robot name="Pendulum Cart">
    <link name="world">
        <inertial>
            <origin xyz="0 0 0"/>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <joint name="slidebar_weld" type="fixed">
        <parent link="world"/>
        <child link="slidebar"/>
        <origin xyz="0 0 2.5"/>
    </joint>

    <link name="slidebar">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="1"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="4.8 .015 .015" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
    </link>

    <joint name="slider_to_cart" type="prismatic">
        <parent link="slidebar" />
        <child link="cart" />
        <axis xyz="1 0 0" />
        <dynamics friction="0.1"/>
        <limit lower="-2.4" upper="2.4" />
    </joint>

    <link name="cart">
        <inertial>
            <mass value="0.525" />
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <collision>
            <geometry>
                <box size="0.125 0.125 0.05" />
            </geometry>
        </collision>
        <visual>
            <geometry>
                <box size="0.125 0.125 0.05" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
    </link>

    <joint name="cart_to_arm" type="continuous">
        <parent link="cart" />
        <child link="arm" />
        <axis xyz="0 1 0" />
        <dynamics friction="0.1"/>
    </joint>

    <link name="arm">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 .2575"/>
            <mass value="0.525"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 .2525"/>
            <geometry>
                <cylinder length=".505" radius=".01"/>
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 .2525"/>
            <geometry>
                <cylinder length=".505" radius=".01"/>
            </geometry>
        </collision>
    </link>

    <joint name="arm_weld" type="fixed">
        <parent link="arm"/>
        <child link="arm_com"/>
        <origin xyz="0 0 .5"/>
        <dynamics friction="0.0"/>
    </joint>

    <link name="arm_com">
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.525"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius=".02525"/>
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.5"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <sphere radius=".02525"/>
            </geometry>
        </collision>
    </link>
</robot>